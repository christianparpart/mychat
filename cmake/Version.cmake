file(READ "${CMAKE_SOURCE_DIR}/version.txt" MYCHAT_VERSION)
string(STRIP "${MYCHAT_VERSION}" MYCHAT_VERSION)
string(REGEX MATCH "^([0-9]+)\\.([0-9]+)\\.([0-9]+)" _ "${MYCHAT_VERSION}")
set(MYCHAT_VERSION_MAJOR "${CMAKE_MATCH_1}")
set(MYCHAT_VERSION_MINOR "${CMAKE_MATCH_2}")
set(MYCHAT_VERSION_PATCH "${CMAKE_MATCH_3}")
message(STATUS "mychat version: ${MYCHAT_VERSION}")
